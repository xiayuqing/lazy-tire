<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="org.jason.lazytire.admin.support.mapper.AuthMapper">
    <resultMap id="BASE_RESULT_MAP" type="org.jason.lazytire.admin.support.domain.Auth">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="account" property="account" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="session" property="session" jdbcType="VARCHAR"/>
        <result column="private_token" property="privateToken" jdbcType="VARCHAR"/>
        <result column="expire" property="expire" jdbcType="BIGINT"/>
    </resultMap>
    <insert id="insertAccountInfo">
        INSERT INTO `account` (account,password,private_token) VALUE (#{account},#{password},#{privateToken})
    </insert>
    <insert id="insertAuth">
        INSERT INTO `auth` (id,account,`session`,expire) VALUE (#{auth.id},#{auth.account},#{auth.session},#{auth.expire})
    </insert>
    <select id="selectSessionExpire" resultType="java.lang.Long">
        SELECT expire FROM `auth` WHERE `session` = #{session}
    </select>
    <select id="validAccountPasswd" resultType="java.lang.Integer">
        SELECT * FROM `account` WHERE account = #{account} AND password = #{password}
    </select>

</mapper>